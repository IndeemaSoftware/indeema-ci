{
  "connection": "default",
  "collectionName": "App",
  "info": {
    "name": "App"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "app_name": {
      "type": "string",
      "required": true
    },
    "app_port": {
      "type": "integer"
    },
    "ssh_host": {
      "type": "string",
      "required": false
    },
    "ssh_username": {
      "type": "string",
      "required": false
    },
    "ssh_pem": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "custom_ssl_key": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "custom_ssl_crt": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "custom_ssl_pem": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "domain_name": {
      "type": "string"
    },
    "project": {
      "model": "project",
      "via": "apps"
    },
    "environment": {
      "type": "enumeration",
      "enum": [
        "development",
        "staging",
        "beta",
        "production"
      ],
      "default": "development",
      "required": true
    },
    "app_status": {
      "type": "enumeration",
      "enum": [
        "waiting",
        "progress",
        "success",
        "failed",
        "cleanup",
        "cleanup_success",
        "cleanup_failed"
      ],
      "default": "waiting",
      "required": true
    },
    "console": {
      "collection": "console",
      "via": "app"
    },
    "desc": {
      "type": "text"
    },
    "server": {
      "model": "server",
      "via": "apps"
    },
    "automatic_cert": {
      "type": "boolean"
    },
    "ci_template": {
      "type": "string"
    },
    "ci_script": {
      "type": "string"
    }
  }
}
