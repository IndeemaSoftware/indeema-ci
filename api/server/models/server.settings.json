{
  "connection": "default",
  "collectionName": "servers",
  "info": {
    "name": "Server"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "Server_name": {
      "type": "string"
    },
    "apps": {
      "collection": "app",
      "via": "server"
    },
    "ssh_ip": {
      "type": "string"
    },
    "nodejs_dependencies": {
      "collection": "nodejs-dependencies",
      "via": "servers"
    },
    "server_dependencies": {
      "via": "servers",
      "collection": "server-dependencies"
    },
    "users": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "servers",
      "dominant": true
    },
    "description": {
      "type": "richtext"
    },
    "ports": {
      "type": "json"
    },
    "platform": {
      "model": "platform"
    },
    "ssh_key": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "ssh_username": {
      "type": "string"
    }
  }
}
