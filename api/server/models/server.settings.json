{
  "connection": "default",
  "collectionName": "servers",
  "info": {
    "name": "Server"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "server_name": {
      "type": "string"
    },
    "apps": {
      "via": "server",
      "collection": "app"
    },
    "ssh_ip": {
      "type": "string"
    },
    "server_dependencies": {
      "collection": "server-dependencies",
      "via": "servers"
    },
    "users": {
      "plugin": "users-permissions",
      "collection": "user",
      "via": "servers",
      "dominant": true
    },
    "description": {
      "type": "richtext"
    },
    "ports": {
      "type": "json"
    },
    "platform": {
      "model": "platform"
    },
    "ssh_key": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "ssh_username": {
      "type": "string"
    },
    "server_status": {
      "type": "enumeration",
      "enum": [
        "waiting",
        "progress",
        "success",
        "failed",
        "cleanup",
        "cleanup_success",
        "cleanup_failed"
      ],
      "default": "waiting"
    },
    "consoles": {
      "collection": "console",
      "via": "server"
    },
    "custom_dependencies": {
      "via": "servers",
      "collection": "custom-dependencies"
    }
  }
}
