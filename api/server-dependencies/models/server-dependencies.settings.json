{
  "connection": "default",
  "collectionName": "ServerDependencies",
  "info": {
    "name": "Server Dependencies"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "label": {
      "type": "string",
      "required": true
    },
    "repo": {
      "type": "string"
    },
    "package": {
      "type": "string",
      "required": true
    },
    "servers": {
      "via": "server_dependencies",
      "collection": "server",
      "dominant": true
    },
    "pre_install_script": {
      "type": "richtext",
      "default": "#/bin/bash"
    },
    "post_install_script": {
      "type": "richtext",
      "default": "#!/bin/bash"
    }
  }
}
